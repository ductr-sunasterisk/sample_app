<% provide(:title, t(".forgot_password")) %>
<h1 class = "text-center"><%= t ".forgot_password" %></h1>
<div class="row">
 <div class="col-md-6 offset-md-3">
   <%= form_for(:password_reset, url: password_resets_path) do |f| %>
     <%= f.label :email %>
     <%= f.email_field :email, class: "form-control mb-2" %>
     <%= f.submit "Submit", class: "btn btn-primary col-12" %>
   <% end %>
 </div>
